<%= render "shared/header" %>

  <div class= "page">
  <h1 class="top">スケジュール新規作成</h1>

  <%= form_for(@plan) do |f| %>
  <table class="table">
    <tr>
      <th><%= f.label :place,"場所" %></th>
      <td><%= f.text_field :place %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date,"開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :round,"日帰り" %></th>
      <td><%= f.check_box :round %><br>日帰りの場合はチェックを入れます</td>
    </tr>

    <tr>
      <th><%= f.label :plan_date,"予定" %></th>
      <td><%= f.time_select :plan_date,{include_blank: true,ignore_data:true,class: "form-control"} %><%= f.text_field :plan %></td>
    </tr>
  </table>
    <input type="submit" class="btn" value="登録を完了する"%>

</div>
<% end %>
<%= render "shared/footer" %>
