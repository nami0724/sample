<%= render "shared/header" %>
<div class= "page">
  <h1><%= @plan.place%>旅行</h1>
    <% if @plan.round == "0" %>
      <p><%= @plan.start_date.to_date.strftime('%m/%d') %>〜<%= @plan.end_date.to_date.strftime('%m/%d') %></p>
    <% else @plan.round == "1" %>
      <p><%= @plan.start_date.to_date.strftime('%m/%d') %>日帰り</p>
    <% end %>
  <p>日程表<br><strong><%= @plan.plan_date.strftime('%-H時%M分') %></strong><%= @plan.plan %></p>
</div>
  <%= render "shared/myplan"%>
  <%= render "shared/footer"%>
