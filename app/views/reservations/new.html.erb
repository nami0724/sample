<%= render "shared/header" %>
<%= render"shared/error",obj:@reservation %>
<div class= "page">

<div class ="page">
  <%= form_for (@reservation), local: true do |f| %>
    <table>
      <tr>
        <th><%= f.label :start_date,"開始日" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>

      <tr>
        <th><%= f.label :end_date,"終了日" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>

      <tr>
        <th><%= f.label :person, "人数" %></th>
        <td><%= f.number_field  :person %></td>
      </tr>
    </table>

    <div>
      <ul>
        <li><%= f.submit"予約する" %></li>
      </ul>
  <% end %>
</div>
</div>
<%= render "shared/footer"%>
